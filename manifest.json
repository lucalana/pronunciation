{
    "manifest_version": 3,
    "name": "Pronunciation",
    "version": "1.0.0",
    "description": "An extension is designed to simplify the process of learning a new language",
    "permissions": [
        "tts",
        "storage",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Click to open the settings."
    },
    "icons": {
        "128": "images/128.png"
    }
}