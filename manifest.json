{
    "manifest_version": 3,
    "name": "Pronúncia",
    "version": "1.0.0",
    "description": "Uma extensão para ajudar as pessoas durante o aprendizado de uma língua.",
    "permissions": [
        "tts",
        "storage",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Clique para abrir as configurações."
    }
}